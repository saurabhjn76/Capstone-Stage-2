<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:focusable="true"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:focusable="true"
    android:layout_marginTop="0dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:focusable="true"
        android:nextFocusDown="@+id/category"
        android:contentDescription="@string/image_desc_cat"
        android:layout_height="260dp"

        android:scaleType="centerCrop"
        android:layout_marginTop="0dp"
        android:src="@drawable/improve"/>
    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:nextFocusUp="@id/imageView"
        android:gravity="center"
        android:background="@color/bg_screen2"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/choose_cat_desc"
        android:text="@string/dummy_cat"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
</android.support.v7.widget.CardView>