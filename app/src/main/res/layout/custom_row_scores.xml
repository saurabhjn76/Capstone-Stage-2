<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/container"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/date"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:focusable="true"
        android:nextFocusRight="@+id/name"
        android:layout_height="wrap_content"
        android:text="@string/dummy_date"
        android:contentDescription="@string/date_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:nextFocusRight="@+id/level"
        android:layout_marginStart="8dp"
        android:nextFocusLeft="@id/date"
        android:id="@+id/name"
        android:contentDescription="@string/name_des"
        android:text="@string/dummy_cat1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginStart="8dp"
        android:id="@+id/level"
        android:nextFocusRight="@+id/score"
        android:nextFocusLeft="@id/name"
        android:contentDescription="@string/level_text"
        android:text="@string/dummy_level"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginStart="8dp"
        android:id="@+id/score"
        android:nextFocusLeft="@id/level"
        android:contentDescription="@string/score_desc"
        android:text="@string/dummy_score1"/>
</LinearLayout>